# Edge Agent Configuration
# Copy to .env and modify as needed

# Cloud API endpoint (use host.docker.internal for local Docker)
CLOUD_API_URL=http://host.docker.internal:8000

# Tenant and plant identifiers
TENANT_ID=acme
PLANT_ID=plant-01

# Telemetry generation interval in milliseconds
TELEMETRY_INTERVAL_MS=2000

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
